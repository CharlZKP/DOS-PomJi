<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    tools:context="com.pompom.pomji.main">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/userNameTxt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:fontFamily="@font/upheavtt"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="Name"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/upheavtt"
            android:gravity="center"
            android:paddingLeft="80dp"
            android:text="none"
            android:textSize="20sp" />

    </FrameLayout>


    <FrameLayout
        android:id="@+id/home"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/pom"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:scaleX="-1"
            android:src="@drawable/sharknapom" />


    </FrameLayout>


    <Button
        android:id="@+id/playButton"
        style="@style/Widget.AppCompat.Button"

        android:layout_height="85dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:fontFamily="@font/upheavtt"
        android:text="walking"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/home"
        app:layout_constraintRight_toLeftOf="@id/cleanButton"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/shopButton"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="100dp"
        android:backgroundTint="?android:attr/textColorAlertDialogListItem"
        android:fontFamily="@font/upheavtt"
        android:text="Shop"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.202" />

    <Button
        android:id="@+id/cleanButton"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="10dp"

        android:backgroundTint="@android:color/holo_blue_bright"
        android:fontFamily="@font/upheavtt"
        android:text="Shower"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toRightOf="@id/playButton"
        app:layout_constraintRight_toRightOf="@+id/home"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/sleepButton"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_gravity="bottom"
        android:backgroundTint="@android:color/background_light"
        android:fontFamily="@font/upheavtt"
        android:text="Sleep"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toTopOf="@id/cleanButton"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toRightOf="@id/inventoryButton"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/inventoryButton"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_gravity="bottom"
        android:backgroundTint="@android:color/background_light"
        android:fontFamily="@font/upheavtt"
        android:text="Bag"
        android:textColor="@android:color/black"
        app:layout_constraintRight_toLeftOf="@id/sleepButton"
        app:layout_constraintLeft_toRightOf="@id/playButton"
        app:layout_constraintBottom_toTopOf="@id/cleanButton"
        app:layout_constraintHorizontal_bias="0.656" />

    <TextView
        android:id="@+id/Money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/upheavtt"
        android:text="1997"
        android:layout_marginTop="20dp"
        android:layout_marginRight="5dp"
        app:layout_constraintRight_toLeftOf="@id/Coin"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="257dp"
        tools:layout_editor_absoluteY="16dp" />
    <TextView
        android:id="@+id/Coin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/upheavtt"
        android:text="Coin"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="257dp"
        tools:layout_editor_absoluteY="16dp" />

    <ProgressBar
        android:id="@+id/energybar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="150dp"
        android:layout_height="12dp"
        android:layout_gravity="bottom"
        android:max="100"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.081"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.124" />

    <ProgressBar
        android:id="@+id/funbar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="150dp"
        android:layout_height="12dp"
        android:layout_gravity="bottom"
        android:max="100"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.124" />

    <ProgressBar
        android:id="@+id/hungerbar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="150dp"
        android:layout_height="12dp"
        android:layout_gravity="bottom"
        android:max="100"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.09" />

    <ProgressBar
        android:id="@+id/cleanbar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="150dp"
        android:layout_height="12dp"
        android:layout_gravity="bottom"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:max="100"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.081"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.09" />


</android.support.constraint.ConstraintLayout>
