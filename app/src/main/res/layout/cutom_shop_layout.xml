<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="25dp">

    <ImageView
        android:id="@+id/imgItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/txtItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:fontFamily="@font/upheavtt"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toRightOf="@id/imgItem"
        app:layout_constraintTop_toTopOf="parent"
/>

    <TextView
        android:id="@+id/txtItemDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="12dp"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/upheavtt"
        app:layout_constraintLeft_toRightOf="@id/imgItem"
        app:layout_constraintTop_toBottomOf="@id/txtItemName" />

    <TextView
        android:id="@+id/txtItemValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="17dp"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/upheavtt"
        app:layout_constraintTop_toBottomOf="@id/txtItemDescription"
        app:layout_constraintLeft_toRightOf="@id/imgItem" />

    <Button
        android:id="@+id/buyButton"
        android:layout_width="68dp"
        android:layout_height="65dp"
        android:text="BUY"
        android:backgroundTint="@android:color/holo_green_dark"
        android:textColor="@android:color/white"
        android:fontFamily="@font/upheavtt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.945"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.045" />

    <TextView
        android:id="@+id/txtItemPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginTop="23dp"
        android:layout_marginLeft="5dp"
        android:fontFamily="@font/upheavtt"
        app:layout_constraintLeft_toRightOf="@id/txtItemName"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>